<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="110dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/teacher"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:fontFamily="@font/chewy"
            android:textAlignment="center"
            android:textStyle="bold"
            android:singleLine="true"
            android:text="Aya Avdews"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:fontFamily="@font/audiowide"
            android:textAlignment="center"
            android:textStyle="bold"
            android:singleLine="true"
            android:text="20011119 202011 1 001"/>

        <LinearLayout
            android:id="@id/line1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@id/iv_logo2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/mapel"/>

                <TextView
                    android:id="@+id/tv_mapel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:fontFamily="@font/chewy"
                    android:text="Normatif-Adaptif"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_logo2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/akses"/>

                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:fontFamily="@font/chewy"
                    android:text="Guru (non-admin)"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btnScann"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style01"
                    android:fontFamily="@font/chewy"
                    android:drawableLeft="@drawable/ic_camera_alt_black_24dp"
                    android:text="scann QRcode"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style01"
                    android:fontFamily="@font/chewy"
                    android:drawableLeft="@drawable/ic_edit_black_24dp"
                    android:text="ganti Password"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>